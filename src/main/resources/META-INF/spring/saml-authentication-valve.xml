<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:compendium="http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
       http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium/gemini-blueprint-compendium.xsd">

    <bean id="saml2Util" class="org.jahia.modules.saml2.SAML2Util"/>

    <!--Authentication Valve Declarations-->
    <bean class="org.jahia.modules.saml2.valve.AuthenticationValve">
        <property name="positionAfter" value="HttpBasicAuthValve"/>
        <property name="saml2SettingsService" ref="saml2SettingsService"/>
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="util" ref="saml2Util"/>
    </bean>

    <bean class="org.jahia.modules.saml2.actions.MetadataAction">
        <property name="name" value="saml2Metadata"/>
        <property name="requireAuthenticatedUser" value="true"/>
        <property name="requiredMethods" value="GET,POST"/>
        <property name="requiredPermission" value="canSetupSaml2"/>
        <property name="saml2SettingsService" ref="saml2SettingsService"/>
        <property name="util" ref="saml2Util"/>
    </bean>

    <bean id="saml2SettingsService" class="org.jahia.modules.saml2.admin.SAML2SettingsService"
          factory-method="getInstance">
        <property name="configurationAdmin" ref="configurationAdmin"/>
        <property name="util" ref="saml2Util"/>
    </bean>

    <bean class="org.jahia.modules.saml2.admin.SAML2SettingsFilter">
        <property name="description" value="Injects saml2 context info in admin UI"/>
        <property name="applyOnModes" value="settings,edit,preview"/>
        <property name="priority" value="2"/>
        <property name="applyOnTemplates" value="saml2"/>
        <property name="saml2SettingsService" ref="saml2SettingsService"/>
    </bean>

    <bean id="saml2SettingsAction" class="org.jahia.modules.saml2.admin.SAML2SettingsAction">
        <property name="name" value="saml2Settings"/>
        <property name="requiredPermission" value="canSetupSaml2"/>
        <property name="requiredMethods" value="GET,POST"/>
        <property name="saml2SettingsService" ref="saml2SettingsService"/>
    </bean>

    <compendium:managed-service-factory factory-pid="org.jahia.modules.saml2" interface="org.jahia.modules.saml2.admin.SAML2Settings" autowire-on-update="true" update-method="update">
        <bean class="org.jahia.modules.saml2.admin.SAML2Settings" init-method="init" destroy-method="destroy">
            <property name="saml2SettingsService" ref="saml2SettingsService"/>
        </bean>
    </compendium:managed-service-factory>

    <osgi:reference id="configurationAdmin" interface="org.osgi.service.cm.ConfigurationAdmin"/>

</beans>